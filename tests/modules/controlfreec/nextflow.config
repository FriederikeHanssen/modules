process {

    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }

    withName:CONTROLFREEC_SOMATIC{
        ext.args = { [
                    "sample":[
                        "inputformat": 'pileup',
                        "mateorientation": 'FR'
                    ],
                    "general" :[
                        "bedgraphoutput": 'TRUE',
                        "intercept": 0,
                        "noisydata": 'TRUE',
                        "sex": "${meta.sex}"
                        ],
                    "control":[
                        "inputformat": "pileup",
                        "mateorientation": "FR"
                    ]
                    ]
        }
    }
}
